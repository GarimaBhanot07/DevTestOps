pipeline{
    agent any
    tools{
        maven 'Maven'
    }

    stages{
    stage ('checkout')
		{
			steps
			{
				checkout scm
			}
		}
		stage ('Build')
		{
			steps
			{
				bat "mvn install"
			}
		}
		stage ('Clean and Test')
		{
			steps
			{
				bat "mvn clean test"
			}
		}
		stage ('Sonar Scanner Analysis')
		{
			steps
			{
				withSonarQubeEnv(installationName: 'Test_Sonar')
				{
					bat "mvn org.sonarsource.scanner.maven:sonar-maven-plugin:3.9.1.2184:sonar"
				}
			}
		}
		
    }
    post{
        success{
            bat "echo success"
        }
    }

}
